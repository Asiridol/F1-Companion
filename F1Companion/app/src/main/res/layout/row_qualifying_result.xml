<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="12dp"
    android:background="#eeeeee"
    android:elevation="2dp">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingTop="2dp">

        <TextView
            android:padding="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:textColor="#888888"
            android:id="@+id/qualifyingPosition"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/qualifyingPosition"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lewis Hamilton"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/qualifyingDriver"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Mercedes"
                android:layout_below="@id/qualifyingDriver"
                android:id="@+id/qualifyingTeam"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q1"
                android:textAlignment="center"
                android:id="@+id/q1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q2"
                android:layout_below="@id/q1"
                android:id="@+id/q2"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q3"
                android:layout_below="@id/q2"
                android:id="@+id/q3"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>