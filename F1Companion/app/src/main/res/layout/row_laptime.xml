<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="12dp"
    android:background="#eeeeee"
    android:elevation="2dp"
    android:id="@+id/parentView">
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flipperLapTimes">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:id="@+id/LapTimeRow">

        <TextView
            android:padding="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:textColor="#888888"
            android:id="@+id/lapNumber"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lapNumber"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:0.1s"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/lapTime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 1"
                android:layout_alignParentRight="true"
                android:id="@+id/lapPosition"
                android:paddingRight="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:id="@+id/PitStopRow">

            <TextView
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="24dp"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:textColor="#888888"
                android:id="@+id/pitNumber"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pitNumber"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:0.1s"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:id="@+id/pitLap"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position 1"
                    android:layout_alignParentRight="true"
                    android:id="@+id/pitDuration"
                    android:paddingRight="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"/>
    </ViewFlipper>
</android.support.v7.widget.CardView>