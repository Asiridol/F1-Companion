    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="co.herovitamin.androiddesignsupportlibraryapplication.CoordinatorLayoutAndAppBarActivity">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/my_appbar_container"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="#eeeeee"
                android:fitsSystemWindows="true">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="snap|scroll|exitUntilCollapsed"
                    android:elevation="2dp"
                    android:background="@drawable/flag_back">
                    <ViewFlipper android:id="@+id/flipper"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Next Race"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#88000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Race Name"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:textSize="20dp"
                            android:id="@+id/homeRaceName"
                            android:textColor="#88000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Days to race"
                            android:id="@+id/daysToRace"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:textSize="20dp"
                            android:textColor="#88000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="days : hours : minutes"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:textSize="15dp"
                            android:textColor="#88000000"/>

                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No Races scheduled"
                                android:textAlignment="center"
                                android:textSize="48dp"
                                android:textColor="#88000000"/>
                        </LinearLayout>
                </ViewFlipper>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:behavior_overlapTop="2dp"/>
    </android.support.design.widget.CoordinatorLayout>
