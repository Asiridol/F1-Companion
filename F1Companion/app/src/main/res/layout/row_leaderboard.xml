<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="12dp"
    android:background="#eeeeee"
    android:elevation="2dp">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Leaderboard"
    android:id="@+id/leaderHeader"
    android:textSize="18dp"
    android:padding="5dp"
    android:background="@color/colorPrimary"
    android:textColor="@color/cardview_light_background"/>
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingTop="2dp">

        <TextView
            android:padding="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/posback"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#888888"
            android:id="@+id/tPos"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tPos"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lewis Hamilton"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/tDriver"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Mercedes"
                android:layout_below="@id/tDriver"
                android:id="@+id/tTeam"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lewis Hamilton"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/tPoints"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Mercedes"
                android:layout_below="@id/tPoints"
                android:id="@+id/tWins"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>